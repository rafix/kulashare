{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}
{% block javascripts %}		
	<script>
		$(".item-lt").hover(function () {
		    $(this).toggleClass("selected-item");
		});	
	</script>
{% endblock %}
{% block body %}    
    <body class="page-id-1 socialr" id="product-listing">
    {% endblock %}
{% block content %}
	<!-- region filter-->
	<div class="container" id="storefront">
	<div class="col-sm-4" id="product-listing-sidebar-left">

					<div class="title-dashboard">
						<h3>Refine Search</h3>
					</div>

					<div id="section-1" class="sidebar-left-section">
							<p id="title-ul-category">Category</p>
							<ul class="cont-ul-category">
							<style>
							.cont-ul-category { list-style:none;}
							</style>
								<!-- Category item -->
								{% for  item in categories  %}
								{% for subitem in item.taxons %}
											<li>												
												 <a href="{{ path('kulashare_product_filter_category', {'categoryId': subitem.id}) }}"> 
												  	{% if subitem.path != "" %}
													<img style="height: 25px; width:25px;margin-right:5px;" src="{{ asset('media/image/' ~ subitem.path) }}" alt="Icon" />				  
													{% else %}
														<img style="height: 25px; width:25px;margin-right:5px;" src="{{ asset('img/noimage.png') }}" alt="No Icon" />
													{%endif%}
												  	<span>{{ subitem.name }}  </span>
												 </a> 
											</li>
										{% endfor %}
								{% endfor %}
								
							</ul>
					</div>  <!-- /#section-1 -->
				
<form method="GET" action="{{path('kulashare_product_filter')}}" class="form-horizontal" role="form">
					<div id="section-2" class="sidebar-left-section">
						<p id="title-section-2">Distance</p>
						<p class="sidebar-grey-text">From my location</p>
						<div class="radio">
						  <label>
						    <input type="radio" name="options" id="options_1" value="option_1" checked="">
						   <p> Less than 1 mile</p>
						  </label>
						</div>
						<div class="radio">
						  <label>
						    <input type="radio" name="options" id="options_2" value="option_2">
						  	 <p> 1 mile or more</p>
						  </label>
						  <input type="hidden" name="lat" value="0.0000">
						  <input type="hidden" name="lon" value="0.0000">
						</div>
						
					</div><!-- /#section-2 -->
				
					<div id="section-3" class="sidebar-left-section">
						<p id="title-section-3">Price Range</p>

						<div class="from-to-price">
							
								<div class="form-group">
									<label class="col-md-2 control-label" for="inputKey">From $</label>
									<div class="col-md-4 cont-input-from-to">
										<input type="text" id="inputKey" name="minPrice" class="form-control">
									</div>
									<label class="col-md-2 control-label" for="inputValue">To $</label>
									<div class="col-md-4 cont-input-from-to">
										<input type="text" id="inputValue" name="maxPrice" class="form-control">
									</div>

								</div>
							
						</div>

